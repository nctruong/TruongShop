<div class="row">
  <div class="col-sm-12">
    <h1>users <%= link_to 'New User', new_admin_user_path, class: 'btn btn-success' %></h1>
  </div>
</div>

<hr />

<table class="table table-striped">
  <tr>
    <th>name</th>
    <th>avatar</th>
    <th>email</th>
    <th>password</th>
    <th>created at</th>
    <th>Actions</th>
  </tr>

  <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= image_tag(user.avatar.thumb) if user.avatar? %></td>
        <td><%= user.email %></td>
        <td><%= user.encrypted_password %></td>
        <td><%= user.created_at %></td>
        <td>
          <%= link_to 'View', admin_user_path(user) %>
          <%= link_to 'Edit', edit_admin_user_path(user) %>
          <%= link_to 'Delete', admin_user_path(user),
                      method: :delete,
                      data: {confirm: 'Do you want to remove this product?'} %>
        </td>
      </tr>
  <% end %>

</table>
