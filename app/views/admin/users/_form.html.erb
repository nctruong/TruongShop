<%= form_for [:admin, @user], html: {class: 'form-horizontal'} do |f| %>

    <%= f.file_field :avatar, multiple: false %>
    <div class="form-group <%= 'has-error' if @user.errors[:name].any? %>">
      <%= f.label :name, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: 'form-control' %>
        <%= render 'shared/field_errors', object: @user, field_name: :name %>
      </div>
    </div>

    <div class="form-group <%= 'has-error' if @user.errors[:email].any? %>">
      <%= f.label :email, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_area :email, class: 'form-control' %>
        <%= render 'shared/field_errors', object: @user, field_name: :email %>
      </div>
    </div>

    <div class="form-group <%= 'has-error' if @user.errors[:password].any? %>">
      <%= f.label :password, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :password, class: 'form-control' %>
        <%= render 'shared/field_errors', object: @user, field_name: :password %>
      </div>
    </div>

    <div class="form-group <%= 'has-error' if @user.errors[:password_confirmation].any? %>">
      <%= f.label :password_confirmation, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :password_confirmation, class: 'form-control' %>
        <%= render 'shared/field_errors', object: @user, field_name: :password_confirmation %>
      </div>
    </div>
    
    <div class="form-group <%= 'has-error' if @user.errors[:admin].any? %>">
      <%= f.label :admin, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= radio_button_tag(:admin, 1) %>
        <%= render 'shared/field_errors', object: @user, field_name: :admin %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit class: 'btn btn-primary' %>
      </div>
    </div>
<% end %>