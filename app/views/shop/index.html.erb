<div class="jumbotron">
  <h3>Truong's Shop!</h3>
  <p>The goods are cheap and very marketable.</p>
</div>
<div id="cart-modal" class="modal fade"></div>
<div class="row">

  <div class="col-sm-3">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Cart</h3>
      </div>
      <div class="panel-body" id="cart">
        <ul>
          <!-- cart will be showed here -->
          <%= render @cart %>
        </ul>
      </div>
    </div>
  </div>
  
  <div class="body content">
  <%= render 'products' %>
  </div>
  
  <div class="col-sm-3">
      <div class="panel panel-default" id="cart">
      <div class="panel-heading">
        <h3 class="panel-title">Categories</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% Category.all.each do |category| %>
            <li><%= link_to category.name, products_showoncategory_path(id: category.id), remote: true  %></li>
        <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
<div class"navbar">Copy right @ Nguyen Cong Truong</div>
