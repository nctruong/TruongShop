<table class="table table-striped">
<%= form_tag(destroyMulti_admin_products_path, method: "post") do %>
  <tr>
    <th>Image</th>
    <th>Title</th>
    <th>Description</th>
    <th>Price</th>
    <th>Category</th>
    <th>Actions</th>
    <th><%= submit_tag("Delete Multi") %></th>
  </tr>

  <% @products.each do |product| %>
      <tr>
        <td><%= image_tag "/uploads/#{product.id}", size: '100' %></td>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.category.name %></td>
        <td>
          <%= link_to 'View', admin_product_path(product) %>
          <%= link_to 'Edit', edit_admin_product_path(product) %>
          <%= link_to 'Delete', admin_product_path(product),
                      method: :delete,
                      data: {confirm: 'Do you want to remove this product?'} %>
          
        </td>
        <td>
            <%= check_box_tag("ids[]",product.id) %>
        </td>
      </tr>
  <% end %>
<% end %>
</table>